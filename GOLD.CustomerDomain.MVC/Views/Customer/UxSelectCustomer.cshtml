@model GOLD.CustomerDomain.MVC.ViewModels.UxSelectCustomerViewModel

@if (Model.ShowBackButton && !Model.BackButtonAsLink)
{
    {
        @Html.ActionLink(Model.BackButtonText, "Back", "Customer", new { txid = Model.txid }, new { @class = "btn btn-danger" })
        @:&nbsp; &nbsp;
    }
}
@Html.ActionLink("Refresh", "UxSelectCustomer", "Customer", new { txid = Model.txid }, new { @class = "btn btn-warning" })
@if (Model.ShowBackButton && Model.BackButtonAsLink)
{
    @:&nbsp; &nbsp;
    @Html.ActionLink(Model.BackButtonText, "Back", "Customer", new { txid = Model.txid }, null)
    @:&nbsp; &nbsp;

}

<br />
<br />


<table class="table table-striped table-hover">
    <tr>
        @*<th>
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Customers[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers[0].DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers[0].NINO)
        </th>
        <th></th>
    </tr>

    @{

        foreach (var item in Model.Customers)
        {
            var trClass=  ""; // = (item.Id == ViewBag.Id) ? "success" : "";
            <tr class="@trClass">
                @*<td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NINO)
                </td>
                <td>
                    @Html.ActionLink(Model.SelectButtonText, "UxSelectCustomer_CustomerSelected", "Customer", new { txid = Model.txid, customerId = item.ID, fullName = item.LastName }, new { @class = "btn btn-success" })
                    @*@Html.ActionLink(selectButtonText, "UxSelectCustomer_CustomerSelected", "Customer", new { txid = txid, customerId = item.ID, fullName = item.FullName }, new { @class = "btn btn-success" })*@
                    @if (Model.ShowPreviewLink)
                    {
                        <span>&nbsp;&nbsp;</span>
                        @Html.ActionLink("Preview", "UxSelectCustomer_PreviewCustomer", "Customer", new { txid = Model.txid, customerId = item.ID }, new { @class = "btn btn-warning" })
                    }

                </td>
            </tr>
        }
    }

</table>
